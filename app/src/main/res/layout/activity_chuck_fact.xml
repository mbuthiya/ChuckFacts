<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jimymuriuki.chuckfacts.ChuckFactActivity">


    <TextView
        android:id="@+id/tv_chuck_fact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_margin="16dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_chuck_fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_chuck_fact_title"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/btn_changeFact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

       android:text="New Fact"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />

</RelativeLayout>
